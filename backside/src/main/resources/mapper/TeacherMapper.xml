<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.study.backside.mapper.TeacherMapper">



    <select id="getTeacherByCourseId" resultType="com.study.backside.bean.Teacher">
        select * from teacher where number in(
          select number from teacher_course where course_id=#{courseId}
        )
    </select>

    <select id="getTeacherNameByNumber" resultType="java.lang.String">
        select name from teacher where number=#{number}
    </select>

    <!--添加教师记录-->
    <insert id="addTeacher" parameterType="com.study.backside.bean.Teacher">
        insert into teacher (number,name,college,e_mail,tel)
        values (#{number}, #{name}, #{college}, #{e_mail}, #{tel})
    </insert>

</mapper>